<link rel="stylesheet" href="css/sign-on.css">
<section class="section">
    <div class="container box">
        <div class="columns is-vcentered">
            <div class="column">
                <!--
                    Change the following image to your companies logo 
                    Uncomment the line you want.
                
                    For JPG logo : <img src='assets/Brand_Logo.png'> 
                    For PNG logo : <img src='assets/Brand_Logo.png'> 
                -->

            </div>
            <div class="column">
                <img class='is-hidden-mobile' src='assets/Meraki_Logo.png'>
            </div>
            <!--Start of Login form -->
        </div>



        <form action="/stageTwo" method="post">

            {{#if error}}
            <div class="field">
                <span class="tag is-danger">
                     
                    <p>Incorrect Login</p></span></div>
            {{/if}}
            <div class="field">
                <div class="control ">
                    <input class="input " type="text" placeholder="Username" name="username">
                    
                </div>
            </div>
            <div class="field">
                <div class="control ">
                    <input class="input " type="password" placeholder="Password" name="password">
                   
                </div>
            </div>
            <button id='loginBtn' class="button has-background-meraki is-fullwidth has-text-white">Login to Corporate Network</button>
    </div>
    </form>

    </div>
</section>